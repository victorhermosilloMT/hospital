<odoo>
    <record model="ir.actions.act_window" id="employee_list_action">
            <field name="name">Employee</field>
            <field name="res_model">hospital.employee</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="arch" type="xml">
                <form string="Employees">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
    </record>

    <record model="ir.ui.view" id="employee_form_view">
        <field name="name">employee.form</field>
        <field name="model">hospital.employee</field>
        <field name="arch" type="xml">
            <form string="Employee Information">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="lastName"/>
                        <field name="phone"/>
                        <field name="age"/>
                    </group>
                    <notebook>
                        <page string="Files">
                            <field name="file_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="info"/>
                                    <field name="employee_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Patients">
                            <field name="patient_id">
                                <tree>
                                    <field name="name"/>
                                    <field name="lastName"/>
                                    <field name="problem"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="patient_list_action">
            <field name="name">Patient</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="arch" type="xml">
                <form string="Patients">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
    </record>

    <record model="ir.actions.act_window" id="files_list_action">
            <field name="name">Files</field>
            <field name="res_model">hospital.file</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="arch" type="xml">
                <form string="Files">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
    </record>

    <menuitem id="main_hospital_menu" name="Hospital"/>

    <menuitem id="hospital_menu_people" name="People" parent="main_hospital_menu"/>
    <menuitem id="hospital_menu_files" name="Files" parent="main_hospital_menu" action="files_list_action"/>


    <menuitem id="hospital_menu_employee" name="Employees" parent="hospital_menu_people" action="employee_list_action"/>
    <menuitem id="hospital_menu_patient" name="Patients" parent="hospital_menu_people" action="patient_list_action"/>

</odoo>